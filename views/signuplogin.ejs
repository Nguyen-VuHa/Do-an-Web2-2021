<section class="content-reg">
    <div class="background-advertisement">
        <div id="stars"></div>
        <div id="stars2"></div>
        <div id="stars3"></div>
    </div>
    <div class="container">
        <div class="title-product">
            <h3 class="btn-view active" style="font-size: 25px;">Thành Viên</h3>
            <h3 style="font-size: 25px;">Quy Định</h3>
        </div>
        <div class="reg-content">
            <div class="reg-form">
                <div class="title">
                    Đăng Ký Mới
                  </div>
                    <form class="form" method="POST" action="/reg/dang-ky" id="form-register">
                        <div class="form-group invalid">
                            <label>Họ Tên</label>
                            <div class="input-text">
                                <input id="fullname" name="fullname" type="text" class="input">
                                <span class="form-message"></span>
                            </div>
                        </div>  
                        <div class="form-group">
                            <label>Email</label>
                            <div class="input-text">
                                <input id="email" name="email" type="text" class="input">
                                <span class="form-message"></span>
                            </div>
                        </div>  
                        <div class="form-group">
                            <label>Mật Khẩu</label>
                            <div class="input-text">
                                <input id="password"  name="password"  type="password" class="input">
                                <span class="form-message"></span>
                            </div>
                        </div>  
                        <div class="form-group">
                            <label>Xác Nhận Mật Khẩu</label>
                            <div class="input-text">
                                <input id="c_password" type="password" class="input">
                                <span class="form-message"></span>
                            </div>
                        </div> 
                        <div class="form-group">
                            <label>Số Điện Thoại</label>
                            <div class="input-text">
                                <input id="numberphone" name="numberphone" type="text" class="input">
                                <span class="form-message"></span>
                            </div>
                        </div> 
                        <div class="form-group terms" style="margin: 0;">
                            <label class="check">
                            <input id="checked" type="checkbox">
                            <span class="checkmark"></span>
                            </label>
                            <p>Đồng ý với các điều khoản và điều kiện</p>
                            <span class="form-message" style="color: #FFCC00; position: absolute;margin-bottom: 3px; bottom: 0px; font-size: 14px;"></span>
                        </div> 
                        <div class="form-group">
                        <button type="submit" class="btn form-submit">Đăng Ký</button>
                        </div>
                    </form>
                </div>
            <div class="reg-advertisements">
                <div class="movie__slider-poster">
                    <div class="promotion-slider" style="width: 400px; height: 500px;">
                        <!-- fade css -->
                        <div class="myslider" style="display: none;">
                            <img src="image/promotion-1.jpg" style="background-size:cover; width: 100%; height: 100%;">
                        </div>
                        <div class="myslider" style="display: none;">
                            <img src="image/promotion-2.jpg" style="background-size:cover; width: 100%; height: 100%;">
                        </div>
                        <div class="myslider" style="display: block;">
                            <img src="image/promotion-3.jpg" style="background-size:cover;  width: 100%; height: 100%;">
                        </div>
                        <!-- onclick js -->
                        <a class="btn-prev" onclick="plusSlides(-1)" style="color:  #54ab35;">❮</a>
                        <a class="btn-next" onclick="plusSlides(1)" style="color: #54ab35;">❯</a>
                        
                        <div class="dotsbox" style="text-align:center">
                            <span class="dot" onclick="currentSlide(1)"></span>
                            <span class="dot" onclick="currentSlide(2)"></span>
                            <span class="dot active" onclick="currentSlide(3)"></span>
                        </div>
                        <!-- /onclick js -->
                        <script>
                            var array = document.querySelectorAll('.myslider');
                        </script>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="js/home.js"></script>
    <script src="js/toastmesage.js"></script>
    <script src="js/validateform.js"></script>
    <script>
        var error = `<%- error %>`;
        $(document).on('click', '.title-product h3', function(){
            $(this).addClass('active').siblings().removeClass('active');
        });

        var counter = 1;
        setInterval(function(){
            document.getElementById('radio' + counter).checked = true;
            counter++;
            if(counter > 3)
            {
                counter = 1;
            }
        }, 3500);

    document.addEventListener('DOMContentLoaded', function () {
  
      Validator ({
        form: '#form-register',
        formGroupSelector: '.form-group',
        errorSelector: '.form-message',
        rules: [
          Validator.isRequired('#fullname', 'Họ tên không được trống!'),
          Validator.isRequired('#email', 'Email không được trống!'),
          Validator.isEmail('#email'),
          Validator.isRequired('#numberphone', 'Số điện thoại không được trống!'),
          Validator.minLength('#password', 8),
          Validator.isRequired('#c_password', 'Vui lòng nhập trường này!'),
          Validator.isConfirmed('#c_password', function () {
            return document.querySelector('#form-register #password').value;
          }, 'Mật khẩu nhập lại không chính xác'),
          Validator.isRequired('#checked', 'Bạn chưa đồng ý với điều khoản!'),
        ]
      });
     
      if(error === 'reg-false')
      {
        toast({
            title: `<%- title_toast %>`,
            message: `<%- message %>`,
            type: `<%- type %>`,
            duration: 3000
        });
      }
      if(error === 'reg-true')
      {
        toast({
            title: `<%- title_toast %>`,
            message: `<%- message %>`,
            type: `<%- type %>`,
            duration: 3000
        })

        setTimeout( toast({
            title: 'Information',
            message: 'Bạn cần đăng nhập gmail để xác nhận tài khoản.',
            type: 'info',
            duration: 3000
        }),4500)
       
      }
    });

    </script>
   
</section>


 